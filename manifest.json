{
  "manifest_version": 3,
  "name": "PopNote",
  "version": "1.0",
  "description": "تطبيق سريع لحفظ وإدارة الملاحظات",
  "permissions": [
    "storage",
    "commands",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+R",
        "mac": "Command+R",
        "chromeos": "Alt+R",
        "linux": "Alt+R"
      },
      "description": "فتح PopNote"
    }
  }
} 